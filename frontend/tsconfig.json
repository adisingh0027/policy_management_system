{
  "extends": "./tsconfig.node.json",
  "compilerOptions": {
    
  "moduleResolution": "bundler",
  "allowImportingTsExtensions": false,


    "jsx": "react-jsx",
    "types": ["vite/client"],
    "baseUrl": "./src",
    "paths": {
      "@components/*": ["components/*"],
      "@hooks/*": ["hooks/*"],
      "@pages/*": ["pages/*"],
      "@api/*": ["api/*"],
      "@context/*": ["context/*"],
      "@utils/*": ["utils/*"]
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json"}]
}
